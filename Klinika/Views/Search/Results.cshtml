@model Klinika.Models.SearchResultsViewModel

@{
    ViewData["Title"] = "Результати пошуку";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Search Summary -->
            <div class="card mb-3">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-check-circle"></i> Результати пошуку
                    </h3>
                    <span class="badge bg-white text-dark">
                        Знайдено: @Model.TotalResults записів
                    </span>
                </div>
                <div class="card-body">
                    <h5>Активні фільтри:</h5>
                    <div class="row">
                        @if (Model.SearchCriteria.DateFrom.HasValue || Model.SearchCriteria.DateTo.HasValue)
                        {
                            <div class="col-md-6">
                                <strong>Період:</strong> 
                                @(Model.SearchCriteria.DateFrom?.ToString("dd.MM.yyyy") ?? "—") 
                                до 
                                @(Model.SearchCriteria.DateTo?.ToString("dd.MM.yyyy") ?? "—")
                            </div>
                        }
                        
                        @if (Model.SearchCriteria.SelectedPatientIds?.Any() == true)
                        {
                            <div class="col-md-6">
                                <strong>Пацієнти:</strong> @Model.SearchCriteria.SelectedPatientIds.Count обрано
                            </div>
                        }
                        
                        @if (Model.SearchCriteria.SelectedDoctorIds?.Any() == true)
                        {
                            <div class="col-md-6">
                                <strong>Лікарі:</strong> @Model.SearchCriteria.SelectedDoctorIds.Count обрано
                            </div>
                        }
                        
                        @if (!string.IsNullOrWhiteSpace(Model.SearchCriteria.PatientNameStartsWith))
                        {
                            <div class="col-md-6">
                                <strong>Ім'я пацієнта починається з:</strong> 
                                "@Model.SearchCriteria.PatientNameStartsWith"
                            </div>
                        }
                        
                        @if (!string.IsNullOrWhiteSpace(Model.SearchCriteria.DiagnosisContains))
                        {
                            <div class="col-md-6">
                                <strong>Діагноз містить:</strong> 
                                "@Model.SearchCriteria.DiagnosisContains"
                            </div>
                        }
                    </div>
                    
                    <div class="mt-3">
                        <a asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-search"></i> Новий пошук
                        </a>
                    </div>
                </div>
            </div>

            <!-- Results Table -->
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Знайдені записи на прийом</h4>
                </div>
                <div class="card-body">
                    @if (Model.Results.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>№</th>
                                        <th>Дата і час</th>
                                        <th>Пацієнт</th>
                                        <th>Лікар (Спеціалізація)</th>
                                        <th>Тип прийому</th>
                                        <th>Статус</th>
                                        <th>Скарги</th>
                                        <th>Діагнози</th>
                                        <th>Дії</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Results.Count; i++)
                                    {
                                        var item = Model.Results[i];
                                        <tr>
                                            <td>@(i + 1)</td>
                                            <td>@item.AppointmentDateTime.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td>
                                                <strong>@item.Patient.FullName</strong><br />
                                                <small class="text-muted">@item.Patient.PhoneNumber</small>
                                            </td>
                                            <td>
                                                <strong>@item.Doctor.FullName</strong><br />
                                                <small class="text-muted">@item.Doctor.Specialization</small>
                                            </td>
                                            <td>@item.AppointmentType</td>
                                            <td>
                                                <span class="badge bg-@(item.Status switch {
                                                    AppointmentStatus.Scheduled => "primary",
                                                    AppointmentStatus.Confirmed => "info",
                                                    AppointmentStatus.Completed => "success",
                                                    AppointmentStatus.Cancelled => "danger",
                                                    AppointmentStatus.NotVisited => "secondary",
                                                    _ => "secondary"
                                                })">
                                                    @(item.Status switch {
                                                        AppointmentStatus.Scheduled => "В обробці",
                                                        AppointmentStatus.Confirmed => "Підтверджений",
                                                        AppointmentStatus.Completed => "Виконаний",
                                                        AppointmentStatus.Cancelled => "Відмінений",
                                                        AppointmentStatus.NotVisited => "Не з'явився",
                                                        _ => "Невідомий"
                                                    })
                                                </span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrWhiteSpace(item.Complaints))
                                                {
                                                    <small>@(item.Complaints.Length > 50 
                                                        ? item.Complaints.Substring(0, 50) + "..." 
                                                        : item.Complaints)</small>
                                                }
                                            </td>
                                            <td>
                                                @if (item.Patient.MedicalRecords.Any())
                                                {
                                                    var diagnoses = item.Patient.MedicalRecords
                                                        .Where(mr => !string.IsNullOrWhiteSpace(mr.Diagnosis))
                                                        .Select(mr => mr.Diagnosis)
                                                        .Distinct()
                                                        .Take(2);
                                                    
                                                    <small>
                                                        @string.Join(", ", diagnoses)
                                                        @if (item.Patient.MedicalRecords.Count > 2)
                                                        {
                                                            <span>...</span>
                                                        }
                                                    </small>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group-vertical btn-group-sm" role="group">
                                                    <a asp-controller="Appointments" 
                                                       asp-action="Details" 
                                                       asp-route-id="@item.Id" 
                                                       class="btn btn-info btn-sm">
                                                        <i class="fas fa-eye"></i> Переглянути
                                                    </a>
                                                    <a asp-controller="Patients" 
                                                       asp-action="Details" 
                                                       asp-route-id="@item.PatientId" 
                                                       class="btn btn-secondary btn-sm">
                                                        <i class="fas fa-user"></i> Картка пацієнта
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                        @if (Model.TotalResults >= 100)
                        {
                            <div class="alert alert-warning mt-3">
                                <i class="fas fa-exclamation-triangle"></i>
                                Показано перші 100 результатів. Уточніть параметри пошуку для більш точних результатів.
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            За вашим запитом нічого не знайдено. Спробуйте змінити параметри пошуку.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>