@model Klinika.Models.Patient

@{
    ViewData["Title"] = "Видалити пацієнта";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title text-danger">
                        <i class="fas fa-exclamation-triangle"></i> Підтвердження видалення
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5>Ви впевнені, що хочете видалити цього пацієнта?</h5>
                        <p>Цю дію неможливо скасувати. Всі пов'язані записи на прийом та медичні записи також будуть видалені.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h5>Інформація про пацієнта:</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>@Html.DisplayNameFor(model => model.FullName):</strong></td>
                                    <td>@Html.DisplayFor(model => model.FullName)</td>
                                </tr>
                                <tr>
                                    <td><strong>@Html.DisplayNameFor(model => model.DateOfBirth):</strong></td>
                                    <td>@Html.DisplayFor(model => model.DateOfBirth)</td>
                                </tr>
                                <tr>
                                    <td><strong>@Html.DisplayNameFor(model => model.PhoneNumber):</strong></td>
                                    <td>@Html.DisplayFor(model => model.PhoneNumber)</td>
                                </tr>
                                <tr>
                                    <td><strong>@Html.DisplayNameFor(model => model.Email):</strong></td>
                                    <td>@Html.DisplayFor(model => model.Email)</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5>Статистика:</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Кількість записів на прийом:</strong></td>
                                    <td>@Model.Appointments.Count</td>
                                </tr>
                                <tr>
                                    <td><strong>Кількість медичних записів:</strong></td>
                                    <td>@Model.MedicalRecords.Count</td>
                                </tr>
                                <tr>
                                    <td><strong>Дата реєстрації:</strong></td>
                                    <td>@Html.DisplayFor(model => model.RegistrationDate)</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Так, видалити пацієнта
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                                <i class="fas fa-eye"></i> Перегляд
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Скасувати
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
