@model Klinika.Models.Patient

@{
    ViewData["Title"] = "Деталі пацієнта";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Інформація про пацієнта</h3>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Змінити
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Назад до списку
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Особиста інформація</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>@Html.DisplayNameFor(model => model.FullName):</strong></td>
                                    <td>@Html.DisplayFor(model => model.FullName)</td>
                                </tr>
                                <tr>
                                    <td><strong>@Html.DisplayNameFor(model => model.DateOfBirth):</strong></td>
                                    <td>@Html.DisplayFor(model => model.DateOfBirth)</td>
                                </tr>
                                <tr>
                                    <td><strong>@Html.DisplayNameFor(model => model.Gender):</strong></td>
                                    <td>@Html.DisplayFor(model => model.Gender)</td>
                                </tr>
                                <tr>
                                    <td><strong>@Html.DisplayNameFor(model => model.PhoneNumber):</strong></td>
                                    <td>@Html.DisplayFor(model => model.PhoneNumber)</td>
                                </tr>
                                <tr>
                                    <td><strong>@Html.DisplayNameFor(model => model.Email):</strong></td>
                                    <td>@Html.DisplayFor(model => model.Email)</td>
                                </tr>
                                <tr>
                                    <td><strong>@Html.DisplayNameFor(model => model.Address):</strong></td>
                                    <td>@Html.DisplayFor(model => model.Address)</td>
                                </tr>
                                <tr>
                                    <td><strong>@Html.DisplayNameFor(model => model.InsuranceNumber):</strong></td>
                                    <td>@Html.DisplayFor(model => model.InsuranceNumber)</td>
                                </tr>
                                <tr>
                                    <td><strong>@Html.DisplayNameFor(model => model.RegistrationDate):</strong></td>
                                    <td>@Html.DisplayFor(model => model.RegistrationDate)</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5>Медичні записи</h5>
                            @if (Model.MedicalRecords.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>Дата</th>
                                                <th>Лікар</th>
                                                <th>Діагноз</th>
                                                <th>Деталі</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var record in Model.MedicalRecords.OrderByDescending(r => r.RecordDate).Take(5))
                                            {
                                                <tr>
                                                    <td>@(record.RecordDate?.ToString("dd.MM.yyyy") ?? "—")</td>
                                                    <td>@record.Doctor.FullName</td>
                                                    <td>@record.Diagnosis</td>
                                                    <td>
                                                        <a asp-controller="MedicalRecords" asp-action="Details" asp-route-id="@record.Id" class="btn btn-sm btn-outline-info">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                @if (Model.MedicalRecords.Count > 5)
                                {
                                    <p class="text-muted">І ще @(Model.MedicalRecords.Count - 5) записів...</p>
                                }
                                <div class="mt-2">
                                    <a asp-controller="MedicalRecords" asp-action="Index" asp-route-patientId="@Model.Id" class="btn btn-sm btn-primary">
                                        <i class="fas fa-file-medical"></i> Всі медичні записи
                                    </a>
                                    <a asp-controller="MedicalRecords" asp-action="Create" asp-route-patientId="@Model.Id" class="btn btn-sm btn-success">
                                        <i class="fas fa-plus"></i> Новий запис
                                    </a>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">Медичних записів поки немає</p>
                                <a asp-controller="MedicalRecords" asp-action="Create" asp-route-patientId="@Model.Id" class="btn btn-sm btn-success">
                                    <i class="fas fa-plus"></i> Створити перший запис
                                </a>
                            }
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-12">
                            <h5>Записи на прийом</h5>
                            @if (Model.Appointments.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>Дата і час</th>
                                                <th>Лікар</th>
                                                <th>Статус</th>
                                                <th>Тип прийому</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var appointment in Model.Appointments.Take(5))
                                            {
                                                <tr>
                                                    <td>@appointment.AppointmentDateTime.ToString("dd.MM.yyyy HH:mm")</td>
                                                    <td>@appointment.Doctor.FullName</td>
                                                    <td>
                                                        <span class="badge bg-@(appointment.Status switch {
                                                            AppointmentStatus.Scheduled => "primary",
                                                            AppointmentStatus.Confirmed => "info",
                                                            AppointmentStatus.Completed => "success",
                                                            AppointmentStatus.Cancelled => "danger",
                                                            AppointmentStatus.NotVisited => "secondary",
                                                            _ => "secondary"
                                                        })">
                                                            @(appointment.Status switch {
                                                                AppointmentStatus.Scheduled => "В обробці",
                                                                AppointmentStatus.Confirmed => "Підтверджений",
                                                                AppointmentStatus.Completed => "Виконаний",
                                                                AppointmentStatus.Cancelled => "Відмінений",
                                                                AppointmentStatus.NotVisited => "Не з'явився",
                                                                _ => "Невідомий"
                                                            })
                                                        </span>
                                                    </td>
                                                    <td>@appointment.AppointmentType</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                @if (Model.Appointments.Count > 5)
                                {
                                    <p class="text-muted">І ще @(Model.Appointments.Count - 5) записів...</p>
                                }
                            }
                            else
                            {
                                <p class="text-muted">Записів на прийом поки немає</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
