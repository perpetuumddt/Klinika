@model Klinika.Models.Doctor

@{
    ViewData["Title"] = "Деталі лікаря";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Інформація про лікаря</h3>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Змінити
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Назад до списку
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Особиста інформація</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>@Html.DisplayNameFor(model => model.FullName):</strong></td>
                                    <td>@Html.DisplayFor(model => model.FullName)</td>
                                </tr>
                                <tr>
                                    <td><strong>@Html.DisplayNameFor(model => model.Specialization):</strong></td>
                                    <td>@Html.DisplayFor(model => model.Specialization)</td>
                                </tr>
                                <tr>
                                    <td><strong>@Html.DisplayNameFor(model => model.Qualification):</strong></td>
                                    <td>@Html.DisplayFor(model => model.Qualification)</td>
                                </tr>
                                <tr>
                                    <td><strong>@Html.DisplayNameFor(model => model.ExperienceYears):</strong></td>
                                    <td>@Html.DisplayFor(model => model.ExperienceYears) років</td>
                                </tr>
                                <tr>
                                    <td><strong>@Html.DisplayNameFor(model => model.PhoneNumber):</strong></td>
                                    <td>@Html.DisplayFor(model => model.PhoneNumber)</td>
                                </tr>
                                <tr>
                                    <td><strong>@Html.DisplayNameFor(model => model.Email):</strong></td>
                                    <td>@Html.DisplayFor(model => model.Email)</td>
                                </tr>
                                <tr>
                                    <td><strong>@Html.DisplayNameFor(model => model.OfficeNumber):</strong></td>
                                    <td>@Html.DisplayFor(model => model.OfficeNumber)</td>
                                </tr>
                                <tr>
                                    <td><strong>@Html.DisplayNameFor(model => model.WorkingHours):</strong></td>
                                    <td>@Html.DisplayFor(model => model.WorkingHours)</td>
                                </tr>
                                <tr>
                                    <td><strong>@Html.DisplayNameFor(model => model.HireDate):</strong></td>
                                    <td>@Html.DisplayFor(model => model.HireDate)</td>
                                </tr>
                                <tr>
                                    <td><strong>@Html.DisplayNameFor(model => model.IsActive):</strong></td>
                                    <td>
                                        @if (Model.IsActive)
                                        {
                                            <span class="badge bg-success">Активний</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Неактивний</span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-12">
                            <h5>Останні записи на прийом</h5>
                            @if (Model.Appointments.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>Дата і час</th>
                                                <th>Пацієнт</th>
                                                <th>Статус</th>
                                                <th>Тип прийому</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var appointment in Model.Appointments.OrderByDescending(a => a.AppointmentDateTime).Take(5))
                                            {
                                                <tr>
                                                    <td>@appointment.AppointmentDateTime.ToString("dd.MM.yyyy HH:mm")</td>
                                                    <td>@appointment.Patient.FullName</td>
                                                    <td>
                                                        <span class="badge bg-@(appointment.Status switch {
                                                            AppointmentStatus.Scheduled => "primary",
                                                            AppointmentStatus.Confirmed => "info",
                                                            AppointmentStatus.Completed => "success",
                                                            AppointmentStatus.Cancelled => "danger",
                                                            AppointmentStatus.NotVisited => "secondary",
                                                            _ => "secondary"
                                                        })">
                                                            @(appointment.Status switch {
                                                                AppointmentStatus.Scheduled => "В обробці",
                                                                AppointmentStatus.Confirmed => "Підтверджений",
                                                                AppointmentStatus.Completed => "Виконаний",
                                                                AppointmentStatus.Cancelled => "Відмінений",
                                                                AppointmentStatus.NotVisited => "Не з'явився",
                                                                _ => "Невідомий"
                                                            })
                                                        </span>
                                                    </td>
                                                    <td>@appointment.AppointmentType</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                @if (Model.Appointments.Count > 5)
                                {
                                    <p class="text-muted">І ще @(Model.Appointments.Count - 5) записів...</p>
                                }
                            }
                            else
                            {
                                <p class="text-muted">Записів на прийом поки немає</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
