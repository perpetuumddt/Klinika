@model IEnumerable<Klinika.Models.Doctor>

@{
    ViewData["Title"] = "Лікарі";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Список лікарів</h3>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Додати лікаря
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                                    <th>@Html.DisplayNameFor(model => model.Specialization)</th>
                                    <th>@Html.DisplayNameFor(model => model.Qualification)</th>
                                    <th>@Html.DisplayNameFor(model => model.ExperienceYears)</th>
                                    <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                                    <th>@Html.DisplayNameFor(model => model.OfficeNumber)</th>
                                    <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                                    <th>Дії</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Specialization)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Qualification)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ExperienceYears) років</td>
                                        <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                        <td>@Html.DisplayFor(modelItem => item.OfficeNumber)</td>
                                        
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                                    <i class="fas fa-eye"></i> Перегляд
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                                    <i class="fas fa-edit"></i> Змінити
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i> Видалити
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
