@model Klinika.Models.Identity.ApplicationUser

@{
    ViewData["Title"] = "Профіль користувача";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">
                        <i class="fas fa-user-circle"></i> Мій профіль
                    </h3>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Назад
                    </a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="mb-3">
                                <i class="fas fa-info-circle text-primary"></i> Особиста інформація
                            </h5>
                            <table class="table table-borderless">
                                <tr>
                                                                    <td><strong>Email адреса:</strong></td>
                                                                    <td>
                                                                        <i class="fas fa-envelope text-muted"></i> @Model.Email
                                                                    </td>
                                                                </tr>
                                <tr>
                                    <td><strong>Повне ім'я:</strong></td>
                                    <td>@Model.FullName</td>
                                </tr>
                                
                                <tr>
                                    <td><strong>Телефон:</strong></td>
                                    <td>
                                        <i class="fas fa-phone text-muted"></i> @Model.PhoneNumberUA
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5 class="mb-3">
                                <i class="fas fa-cog text-success"></i> Інформація про обліковий запис
                            </h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td style="width: 40%;"><strong>Дата реєстрації:</strong></td>
                                    <td>
                                        <i class="far fa-calendar-alt text-muted"></i> 
                                        @Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Останній вхід:</strong></td>
                                    <td>
                                        @if (Model.LastLoginDate.HasValue)
                                        {
                                            <i class="far fa-clock text-muted"></i>
                                            @Model.LastLoginDate.Value.ToString("dd.MM.yyyy HH:mm")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Немає даних</span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <hr class="my-4" />

                    <div class="mt-4">
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-sign-out-alt"></i> Вийти з системи
                            </button>
                        </form>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-home"></i> На головну
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>