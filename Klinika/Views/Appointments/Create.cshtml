@model Klinika.Models.Appointment
@{
    ViewData["Title"] = "Новий запис на прийом";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Створити новий запис на прийом</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="PatientId" class="form-label"></label>
                                    <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId">
                                        <option value="">Оберіть пацієнта</option>
                                    </select>
                                    <span asp-validation-for="PatientId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="DoctorId" class="form-label"></label>
                                    <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.DoctorId">
                                        <option value="">Оберіть лікаря</option>
                                    </select>
                                    <span asp-validation-for="DoctorId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group mb-3">
                                    <label for="appointmentDate" class="form-label">Дата прийому</label>
                                    <input type="date" id="appointmentDate" class="form-control" required />
                                    <span asp-validation-for="AppointmentDateTime" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group mb-3">
                                    <label for="appointmentTime" class="form-label">Час прийому</label>
                                    <select id="appointmentTime" class="form-control" required>
                                        <option value="">Оберіть час</option>
                                        <option value="08:00">08:00</option>
                                        <option value="08:30">08:30</option>
                                        <option value="09:00">09:00</option>
                                        <option value="09:30">09:30</option>
                                        <option value="10:00">10:00</option>
                                        <option value="10:30">10:30</option>
                                        <option value="11:00">11:00</option>
                                        <option value="11:30">11:30</option>
                                        <option value="12:00">12:00</option>
                                        <option value="12:30">12:30</option>
                                        <option value="13:00">13:00</option>
                                        <option value="13:30">13:30</option>
                                        <option value="14:00">14:00</option>
                                        <option value="14:30">14:30</option>
                                        <option value="15:00">15:00</option>
                                        <option value="15:30">15:30</option>
                                        <option value="16:00">16:00</option>
                                        <option value="16:30">16:30</option>
                                        <option value="17:00">17:00</option>
                                        <option value="17:30">17:30</option>
                                        <option value="18:00">18:00</option>
                                    </select>
                                </div>
                            </div>
                            <!-- Приховане поле для об'єднаної дати та часу -->
                            <input asp-for="AppointmentDateTime" type="hidden" id="appointmentDateTimeHidden" />
                            
                            <div class="col-md-3">
                                <div class="form-group mb-3">
                                    <label asp-for="DurationMinutes" class="form-label"></label>
                                    <select asp-for="DurationMinutes" class="form-control">
                                        <option value="15">15 хвилин</option>
                                        <option value="30" selected>30 хвилин</option>
                                        <option value="45">45 хвилин</option>
                                        <option value="60">60 хвилин</option>
                                        <option value="90">90 хвилин</option>
                                        <option value="120">120 хвилин</option>
                                    </select>
                                    <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group mb-3">
                                    <label asp-for="AppointmentType" class="form-label"></label>
                                    <select asp-for="AppointmentType" class="form-control">
                                        <option value="">Оберіть тип прийому</option>
                                        <option value="Первинний прийом">Первинний прийом</option>
                                        <option value="Повторний прийом">Повторний прийом</option>
                                        <option value="Консультація">Консультація</option>
                                        <option value="Профілактичний огляд">Профілактичний огляд</option>
                                        <option value="Екстрений виклик">Екстрений виклик</option>
                                    </select>
                                    <span asp-validation-for="AppointmentType" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Complaints" class="form-label"></label>
                                    <textarea asp-for="Complaints" 
                                              class="form-control" 
                                              rows="5" 
                                              placeholder="Опишіть скарги пацієнта"
                                              style="resize: none; min-height: 120px; max-height: 200px;"></textarea>
                                    <span asp-validation-for="Complaints" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Notes" class="form-label"></label>
                                    <textarea asp-for="Notes" 
                                              class="form-control" 
                                              rows="5" 
                                              placeholder="Додаткові примітки"
                                              style="resize: none; min-height: 120px; max-height: 200px;"></textarea>
                                    <span asp-validation-for="Notes" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Створити запис
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Назад до списку
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Об'єднання дати та часу в одне поле
        function updateDateTime() {
            const date = document.getElementById('appointmentDate').value;
            const time = document.getElementById('appointmentTime').value;
            
            if (date && time) {
                const dateTimeValue = date + 'T' + time;
                document.getElementById('appointmentDateTimeHidden').value = dateTimeValue;
            }
        }

        // Додавання обробників подій
        document.getElementById('appointmentDate').addEventListener('change', updateDateTime);
        document.getElementById('appointmentTime').addEventListener('change', updateDateTime);

        // Встановлення мінімальної дати (сьогодні)
        const today = new Date().toISOString().split('T')[0];
        document.getElementById('appointmentDate').setAttribute('min', today);

        // Обмеження кількості символів у текстових полях
        const complaintsField = document.querySelector('textarea[name="Complaints"]');
        const notesField = document.querySelector('textarea[name="Notes"]');

        function limitCharacters(field, maxLength) {
            field.addEventListener('input', function() {
                if (this.value.length > maxLength) {
                    this.value = this.value.substring(0, maxLength);
                }
            });
        }

        if (complaintsField) limitCharacters(complaintsField, 500);
        if (notesField) limitCharacters(notesField, 500);
    </script>
}