@model Klinika.Models.MedicalRecord

@{
    ViewData["Title"] = "Змінити медичну запис";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Змінити медичну запис</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="PatientId" class="form-label"></label>
                                    <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId">
                                        <option value="">Оберіть пацієнта</option>
                                    </select>
                                    <span asp-validation-for="PatientId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="DoctorId" class="form-label"></label>
                                    <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.DoctorId">
                                        <option value="">Оберіть лікаря</option>
                                    </select>
                                    <span asp-validation-for="DoctorId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="RecordDate" class="form-label"></label>
                                    <input asp-for="RecordDate" class="form-control" type="date" />
                                    <span asp-validation-for="RecordDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="NextVisitDate" class="form-label"></label>
                                    <input asp-for="NextVisitDate" class="form-control" type="date" />
                                    <span asp-validation-for="NextVisitDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Diagnosis" class="form-label"></label>
                                    <textarea asp-for="Diagnosis" class="form-control" rows="2" placeholder="Встановлений діагноз"></textarea>
                                    <span asp-validation-for="Diagnosis" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Symptoms" class="form-label"></label>
                                    <textarea asp-for="Symptoms" class="form-control" rows="2" placeholder="Симптоми та скарги"></textarea>
                                    <span asp-validation-for="Symptoms" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Treatment" class="form-label"></label>
                                    <textarea asp-for="Treatment" class="form-control" rows="2" placeholder="Призначене лікування"></textarea>
                                    <span asp-validation-for="Treatment" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Prescriptions" class="form-label"></label>
                                    <textarea asp-for="Prescriptions" class="form-control" rows="2" placeholder="Призначені ліки"></textarea>
                                    <span asp-validation-for="Prescriptions" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Recommendations" class="form-label"></label>
                                    <textarea asp-for="Recommendations" class="form-control" rows="2" placeholder="Рекомендації лікаря"></textarea>
                                    <span asp-validation-for="Recommendations" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Notes" class="form-label"></label>
                                    <textarea asp-for="Notes" class="form-control" rows="2" placeholder="Додаткові примітки"></textarea>
                                    <span asp-validation-for="Notes" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Зберегти зміни
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                                <i class="fas fa-eye"></i> Перегляд
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Назад до списку
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
