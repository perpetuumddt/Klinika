@model Klinika.Models.Appointment

@{
    ViewData["Title"] = "Деталі запису на прийом";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Запис на прийом</h3>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Змінити
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Назад до списку
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Основна інформація</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Пацієнт:</strong></td>
                                    <td>@Html.DisplayFor(model => model.Patient.FullName)</td>
                                </tr>
                                <tr>
                                    <td><strong>Лікар:</strong></td>
                                    <td>@Html.DisplayFor(model => model.Doctor.FullName)</td>
                                </tr>
                                <tr>
                                    <td><strong>Дата і час:</strong></td>
                                    <td>@Model.AppointmentDateTime.ToString("dd.MM.yyyy HH:mm")</td>
                                </tr>
                                <tr>
                                    <td><strong>Тривалість:</strong></td>
                                    <td>@Html.DisplayFor(model => model.DurationMinutes) хвилин</td>
                                </tr>
                                <tr>
                                    <td><strong>Тип прийому:</strong></td>
                                    <td>@Html.DisplayFor(model => model.AppointmentType)</td>
                                </tr>
                                <tr>
                                    <td><strong>Статус:</strong></td>
                                    <td>
                                        <span class="badge bg-@(Model.Status switch {
                                            AppointmentStatus.Scheduled => "primary",
                                            AppointmentStatus.Confirmed => "info",
                                            AppointmentStatus.Completed => "success",
                                            AppointmentStatus.Cancelled => "danger",
                                            AppointmentStatus.NotVisited => "secondary",
                                            _ => "secondary"
                                        })">
                                            @(Model.Status switch {
                                                AppointmentStatus.Scheduled => "В обробці",
                                                AppointmentStatus.Confirmed => "Підтверджений",
                                                AppointmentStatus.Completed => "Виконаний",
                                                AppointmentStatus.Cancelled => "Відмінений",
                                                AppointmentStatus.NotVisited => "Не з'явився",
                                                _ => "Невідомий"
                                            })
                                        </span>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5>Додаткова інформація</h5>
                            <div class="mb-3">
                                <strong>Скарги пацієнта:</strong>
                                <p class="mt-2">@Html.DisplayFor(model => model.Complaints)</p>
                            </div>
                            <div class="mb-3">
                                <strong>Примітки:</strong>
                                <p class="mt-2">@Html.DisplayFor(model => model.Notes)</p>
                            </div>
                            <div class="mb-3">
                                <strong>Дата створення:</strong>
                                <p class="mt-2">@Html.DisplayFor(model => model.CreatedDate)</p>
                            </div>
                            @if (Model.UpdatedDate.HasValue)
                            {
                                <div class="mb-3">
                                    <strong>Дата оновлення:</strong>
                                    <p class="mt-2">@Html.DisplayFor(model => model.UpdatedDate)</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
